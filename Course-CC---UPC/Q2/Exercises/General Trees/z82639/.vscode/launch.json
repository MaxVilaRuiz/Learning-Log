{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debugar amb GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/program", // <--- si el nom del programa es diu diferent, cal canviar-lo aquí
            "args": [],
            "stopAtEntry": true, // <---- Posant `false` aquí no pararà al principi del programa
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false, // <--- Posant true aquí llença una consola externa
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: Compila amb Makefile",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
